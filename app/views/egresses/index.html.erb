<p id="notice"><%= notice %></p>

<h1>Listing Egresses</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Cause</th>
      <th>Reproduction</th>
      <th>Age</th>
      <th>Causedeath</th>
      <th>Observations</th>
      <th>Animal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @egresses.each do |egress| %>
      <tr>
        <td><%= egress.date %></td>
        <td><%= egress.cause %></td>
        <td><%= egress.reproduction %></td>
        <td><%= egress.age %></td>
        <td><%= egress.causedeath %></td>
        <td><%= egress.observations %></td>
        <td><%= egress.animal %></td>
        <td><%= link_to 'Show', egress %></td>
        <td><%= link_to 'Edit', edit_egress_path(egress) %></td>
        <td><%= link_to 'Destroy', egress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

