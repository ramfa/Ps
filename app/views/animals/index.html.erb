<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Numbertag</th>
      <th>Microchip</th>
      <th>Capturedate</th>
      <th>Age</th>
      <th>Commonname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.weight %></td>
        <td><%= animal.numbertag %></td>
        <td><%= animal.microchip %></td>
        <td><%= animal.capturedate %></td>
        <td><%= animal.age %></td>
        <td><% if animal.commonname %>
        <%= animal.commonname.name %>
        <% end %>
        </td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

